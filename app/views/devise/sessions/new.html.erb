<div class="container">
  <div class="logo_container">
    <div class="logo"></div>
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.text_field :email,
                        required: false,
                        label: false,
                        autofocus: true,
                        placeholder: "Your email address here",
                        :class => "form_input",
                        :id => "email_input" %>
      <%= f.password_field :password,
                        label: false,
                        required: false,
                        placeholder: "Your password here",
                        :class => "form_input" %>
      <%# <%= f.check_box :remember_me, label: "Remember me", id: "remember", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.submit "Log in", :class => "login-signup" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
